extends layout

block content
  .right-image-decor
  section#testimonials.section
    .container
      .row
        .col-lg-8.offset-lg-2
          .center-heading
            h2
              em Creation
              |  de profil
            p
              //message erreur
            form(action='' method='POST')
              label(for='FName') Nom
              br
              input#FName(type='text' name='FName' required='true')
              br
              br
              label(for='FSurname') Prénom
              br
              input#FSurname(type='text' name='FSurname' required='true')
              br
              br
              label(for='FDate') Date de naissance
              br
              input#FDate(type='date' name='FDate' required='true')
              br
              br
              label(for='FSex') Genre
              br
              input#Homme(type='Radio' name='FSex' value='Homme')
              label(for='Homme') Homme
              br
              input#Femme(type='Radio' name='FSex' value='Femme')
              label(for='Femme') Femme
              br
              input#Autres(type='Radio' name='FSex' value='Autres' checked='')
              label(for='Autres') Autres / Ne souhaite pas préciser
              br
              br
              label(for='FHeight') Taille (cm)
              br
              input#FHeight(type='number' name='FHeight' min='0' max='300' required='true')
              br
              br
              label(for='FWeight') Poids (Kg)
              br
              input#FWeight(type='number' name='FWeight' min='0' max='300' required='true')
              br
              br
              label(for='FMail') Adresse Email
              br
              input#FMail(type='email' name='FMail' pattern='[^@ \t\r\n]+@[^@ \t\r\n]+\.[^@ \t\r\n]+' required='true')
              br
              br
              label(for='FPassword') Mot de passe
              br
              |                             (le mot de passe doit contenir au moins 8 caractères, dont au moins 2 majuscules, 1 caractère special (!@#$£€%^&*()\-_+.), 2 nombres et 3 minuscules) 
              br
              input#FPassword(type='password' name='FPassword' pattern='^(?=(.*[a-z]){3,})(?=(.*[A-Z]){2,})(?=(.*[0-9]){2,})(?=(.*[!@#$£€%^&*()\-__+.]){1,}).{8,}$' required='true')
              br
              br
              input(type='submit' value='Valider')